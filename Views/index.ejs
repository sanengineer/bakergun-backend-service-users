<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Build CRUD RestAPI with NodeJS, PostgreSQL and Sequelize</title>

    <%- include("partials/head/bootstrap.ejs")%> <%-
    include("partials/head/meta.ejs")%>
  </head>
  <body class="vh-100">
    <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-12 col-md-9 mt-5">
          <div class="card o-hidden border-0 my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                <div class="col-lg-12">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Bakergun Admin</h1>
                    </div>
                    <form class="user" action="/admin/dashboard">
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control form-control-user"
                          name="username"
                          placeholder="username"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="password"
                          class="form-control form-control-user"
                          id="exampleInputPassword"
                          name="password"
                          placeholder="password"
                        />
                      </div>

                      <button
                        type="submit"
                        class="btn btn-primary btn-user btn-block"
                      >
                        Login
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
