<h2 class="h4 font-weight-bolder mt-5 mb-2">User Game History</h2>

<form method="post" action="/admin/user-game-history">
  <div class="form-group">
    <label for="forUserGameId">User Id</label>
    <input
      id="formScore"
      type="text"
      name="user_id"
      class="form-control col-md-4"
    />
  </div>
  <div class="form-group">
    <label for="forScore">Score</label>
    <input
      id="formScore"
      type="text"
      name="score"
      class="form-control col-md-4"
    />
  </div>
  <div class="form-group">
    <label for="forComment">Comment</label>
    <input
      id="formComment"
      type="text"
      name="comment"
      class="form-control col-md-4"
    />
  </div>
  <button class="btn btn-success" type="submit">Add</button>
</form>
