<h2 class="h4 font-weight-bolder mt-5 mb-2">User Game</h2>

<form method="post" action="/admin/user-game">
  <div class="form-group">
    <label for="forUsername">Username</label>
    <input
      id="formName"
      type="text"
      name="username"
      class="form-control col-md-4"
    />
  </div>
  <div class="form-group">
    <label for="forEmail">Email</label>
    <input
      id="forDescription"
      type="email"
      name="email"
      class="form-control col-md-4"
    />
  </div>
  <div class="form-group">
    <label for="forPassword">Password</label>
    <input
      id="forPassword"
      type="password"
      name="password"
      class="form-control col-md-4"
    />
  </div>
  <button class="btn btn-success" type="submit">Add</button>
</form>
