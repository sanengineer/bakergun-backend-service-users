<h2 class="h5 font-weight-bold my-3">Tabel User Biodata</h2>

<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Biodata ID</th>
              <th>Fullname</th>
              <th>Sex</th>
              <th>Jobs</th>
              <th>User ID</th>
              <th>Method</th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < userbiodata.length; i++ ) { %>
            <tr>
              <td><%= userbiodata[i].user_game_biodata_id %></td>
              <td><%= userbiodata[i].fullname %></td>
              <td><%= userbiodata[i].sex %></td>
              <td><%= userbiodata[i].jobs %></td>
              <td><%= userbiodata[i].user_id%></td>
              <td>
                <form
                  action="/admin/user-game-biodata/<%= usergame[i].user_id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-success" type="submit">Delete</button>
                </form>
              </td>
            </tr>

            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
