<h2 class="h5 font-weight-bold my-3">Tabel User History</h2>

<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>History ID</th>
              <th>Score</th>
              <th>Comments</th>
              <th>User ID</th>
              <th>Method</th>
            </tr>
          </thead>
          <tbody>
            <% userhistory.forEach(i=> {%>
            <tr>
              <td><%= i.user_game_history_id %></td>
              <td><%= i.score %></td>
              <td><%= i.comment %></td>
              <td><%= i.user_id %></td>
              <td>
                <form
                  action="/admin/user-game-history/<%= usergame[i].user_id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-success" type="submit">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
